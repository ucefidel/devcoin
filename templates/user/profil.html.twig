{% extends 'base.html.twig' %}

{% block title "Mon profil" %}

{% block body %}
    {% set user = app.user %}
    <div class="container">
        <div class="row border rounded p-4">
            <div class="col-1">
                <img src="{{ "https://i.pravatar.cc/150?img=" ~ user.id }}" class="avatar avatar-medium"
                     alt="Avatar de "/>
            </div>
            <div class="col-8">
                {{ user.fullName }} <br>
                Membre depuis le {{ user.createdAt | format_datetime('long', 'none', locale='fr') }} <br>
                <div class="text-secondary">
                    <i class="fas fa-map-marker-alt"></i>
                    {{ user.city }}
                </div>
            </div>
            <div class="col-2 text-right">
                <a class="btn btn-outline-warning">
                    <i class="fa fa-share-alt"></i>
                    Partager
                </a>
            </div>
        </div>
        <div class="row">
            {% for annonce in annonces %}
                <div class="col">
                    {{ annonce.title }}
                </div>
            {% endfor %}
        </div>

    </div>

{% endblock %}


