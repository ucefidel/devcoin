{% extends "base.html.twig" %}


{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <form class="d-flex justify-content-center" action="{{ path('user_login') }}" method="post">
        <div class="col-5">


            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" class="form-control" name="_username" id="email" aria-describedby="emailHelp"
                       placeholder="Enter email"/>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                    else.</small>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="_password" id="password" placeholder="Password">
            </div>
            <div>
                <a class="btn" href="{{ path('registration_user') }}">
                    Registration now ?
                </a>
            </div>
            <button type="submit" class="btn btn-warning">Submit</button>
        </div>
    </form>
{% endblock %}
