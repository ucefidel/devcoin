{% extends "base.html.twig" %}


{% block title "DevCoin - Connexion" %}

{% block body %}
    <form class="d-flex justify-content-center"
          action="{{ path('user_login') }}"
          method="post"
    >
        <div class="col-6  shadow p-3 mb-5 bg-black rounded">
            <div class="form-group">
                <i class="fas fa-envelope"></i>
                <label for="email">Email address</label>
                <input type="email" class="form-control {% if hasError %}is-invalid{% endif %}" name="_username"
                       id="email"
                       aria-describedby="emailHelp"
                       placeholder="Enter email"
                       value="{{ username }}"
                />
                {% if hasError %}
                    <small id="emailHelp" class="form-text text-danger">
                        Une erreur est survenue, le nom d'utilisateur ou alors le mot de passe est invalide
                    </small>
                {% endif %}

            </div>
            <div class="form-group">
                <i class="fas fa-unlock"></i>
                <label for="password">Password</label>
                <input type="password" class="form-control" name="_password" id="password" placeholder="Password">
            </div>
            <div class="mb-2">
                <a href="{{ path('registration_user') }}">
                    Registration now ?
                </a>
            </div>
            <div>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-check"></i>
                    Submit
                </button>
            </div>
        </div>
    </form>
{% endblock %}
