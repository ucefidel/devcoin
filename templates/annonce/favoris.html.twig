{% extends "base.html.twig" %}

{% block title "DevCoin - Favoris" %}

{% block body %}
    <h2> Favoris </h2>
    <div class="row">
        {% for favori in favoris %}
            {% if app.user and favori.user.id == app.user.id %}
                <div class="col-4">
                    <div class="card">
                        <div class="card-title">
                            {{ favori.annonce.title }}
                        </div>
                        <div class="card-body">
                            <div class="card-img">
                                {{ favori.annonce.description }}
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>

{% endblock %}