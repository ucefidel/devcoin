{% extends 'base.html.twig' %}

{% block title %} DevCoin - Page d'accueil {% endblock %}

{% block body %}

    <div class="container">

        <div class="row">
            <div class="col-4">

                <form class="form">
                    <div class="form-group">
                        <label class="control-label" for="keyword">Mot cl√©s :</label>
                        <input class="form-control" type="text" id="keyword" placeholder=""/>
                    </div>
                </form>
            </div>
            <div class="col-4">
            </div>

            <div class="col-4">
            </div>


        </div>


        <div class="h2 mb-5">
            Top des annonces actuelle :
        </div>
        <div class="row">
            {% for annonce in annonces %}
                <div class="col-3 mb-3">
                    <div class="border border-dark rounded p-2">
                        <h3>{{ annonce.title }}</h3>
                        <p>{{ annonce.description }}</p>
                        <a href="{{ path('annonce_favoris',{id:annonce.id}) }}" class="btn btn-link js-annonce">
                            {% if app.user and annonce.isFavorites(app.user) %}
                                <i id="toto" class="fa fa-heart"></i>
                            {% else %}
                                <i id="toto" class="far fa-heart"></i>
                            {% endif %}
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    {{ encore_entry_script_tags('favoris') }}
{% endblock %}

