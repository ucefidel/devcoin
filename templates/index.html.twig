{% extends 'base.html.twig' %}

{% block title %} DevCoin - Page d'accueil {% endblock %}

{% block body %}

    <div class="container">
        <div class="form m-3 shadow p-3 mb-5 bg-white rounded">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-4">
                    {{ form_row(form.keyword) }}
                </div>
                <div class="col-4">
                    {{ form_row(form.localization) }}
                </div>
                <div class="col-4 mt-2">
                    <div class="form-group">
                        <label class="control-label" for="search"></label>

                        <button class="form-control btn btn-primary" id="search" type="submit">
                            <i class="fa fa-search"></i>
                            Recherche
                        </button>
                    </div>
                </div>
            </div>

            {{ form_end(form) }}
        </div>


        {% if result is defined %}
            <div class="h2 mb-5">RÃ©sultat de la recherche :</div>
            <div class="container">
                <ul class="list-group">
                    {% for annonce in result %}
                        <li class="list-group-item mb-2 shadow-sm  p-3 mb-5 bg-white rounded">

                            <div class="row">
                                <div class="col-4">
                                    <img alt="{{ "Photo" ~ annonce.id }}"
                                         src={{ annonce.picture }}/>
                                </div>
                                <div class="col-8">
                                    <div class="h4">{{ annonce.title }}</div>
                                    <p>{{ annonce.description }}</p>
                                </div>

                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% else %}
            <div class="h2 mb-5">
                Top des annonces actuelle :
            </div>
            <div class="row">
                {% for annonce in annonces %}
                    <div class="col-4 mb-3 d-flex align-items-stretch">
                        <div class="border border-dark rounded p-2">
                            <h3>{{ annonce.title }}</h3>
                            <img class="img-thumbnail" alt="{{ "Photo" ~ annonce.id }}"
                                 src={{ "https://loremflickr.com/320/240?lock=" ~ annonce.id }}/>
                            <p>{{ annonce.description }}</p>
                            <a href="{{ path('annonce_favoris',{id:annonce.id}) }}" class="btn btn-link js-annonce">
                                {% if app.user and annonce.isFavorites(app.user) %}
                                    <i id="toto" class="fa fa-heart"></i>
                                {% else %}
                                    <i id="toto" class="far fa-heart"></i>
                                {% endif %}
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="row">
                <!-------- Handle Pagination ------->
                {{ knp_pagination_render(annonces) }}
                <!---------------------------------->
            </div>
        {% endif %}
    </div>
    {{ encore_entry_script_tags('favoris') }}
{% endblock %}

{% block javascripts %}

{% endblock %}
